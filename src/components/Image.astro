---
import { Image as AstroImage, type LocalImageProps } from 'astro:assets'

type Props = LocalImageProps

const {...rest} = Astro.props
---

<AstroImage {...rest}/>

<style>
  img {
    border-radius: 4px;
    box-shadow: 0 4px 4px hsla(var(--clr--body) / 20%), 0 8px 8px hsla(var(--clr--body) / 15%), 0 16px 16px hsla(var(--clr--body) / 10%);
  }
</style>
